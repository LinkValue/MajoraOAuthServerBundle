<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">


    <services>

        <!-- Password grant extension -->
        <service id="majora.oauth.grant_extension.password" public="false"
            class="Majora\Component\OAuth\GrantType\PasswordGrantExtension"
        >
            <argument><!-- account loader --></argument>
            <argument type="service" id="security.password_encoder"></argument>
        </service>

        <!-- Random generator -->
        <service id="majora.oauth.random_generator" public="false"
            class="Majora\Component\OAuth\Generator\RandomTokenGenerator"
        >
            <argument><!-- secret --></argument>
        </service>

        <!-- OAuth server -->
        <service id="majora.oauth.server" class="Majora\Component\OAuth\Server\Server" public="true">
            <argument type="service" id="event_dispatcher" />
            <argument><!-- application loader --></argument>
            <argument><!-- access token ttl --></argument>
            <argument><!-- access token classname --></argument>
            <argument type="service" id="majora.oauth.random_generator" />
            <argument type="collection">
                <argument key="password" type="service" id="majora.oauth.grant_extension.password" />
            </argument>
        </service>
        <service id="oauth.server" alias="majora.oauth.server" />

    </services>

</container>
